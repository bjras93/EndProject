@model DietView
@using LifeStruct.Controllers;
@{
    ViewBag.Title = Model.Title;

}
@section Signout{
    @Html.Partial("~/Views/Shared/_logout.cshtml")
}
@Html.ActionLink("Return", "Index", "Diets", null, new { @class = "return" })

    <div class="diet-information">
        <img src="~/Content/img/user/@Model.Img" />

        <div class="description">
            <h3>@Model.Title</h3>
            @Html.Raw(Model.Description)
        </div>
    </div>
    @if (Model.MealCollection.Count() > 0)
    {
        <div class="diet-schedule">
            <table>
                <thead>
                    <tr>
                        <th>Day</th>
                        @foreach (var m in Model.Meals)
                        {
                            if (Model.MealCollection.Where(x => x.Meal == Convert.ToInt32(m.Id)).Count() > 0)
                            {
                                <th>@m.Name</th>
                            }
                        }

                    </tr>
                </thead>
                <tbody>

                    @foreach (var d in Model.Days)
                {
                    if (Model.MealCollection.Where(x => x.Day == Convert.ToInt32(d.Id)).Count() > 0)
                    {

                            <tr>
                                <td>
                                    @d.Name
                                </td>
                                @foreach (var m in Model.Meals)
                                {
                                    if (Model.MealCollection.Where(x => x.Meal == Convert.ToInt32(m.Id)).Count() > 0)
                                    {
                                        <td>
                                            <table>
                                                @foreach (var mc in Model.MealCollection)
                                                {
                                                    if (d.Id == mc.Day && Convert.ToInt32(m.Id) == mc.Meal)
                                                    {
                                                        <tr>
                                                            <td>
                                                                <p>
                                                                    @mc.Food
                                                                </p>
                                                            </td>
                                                            <td>
                                                                <p>
                                                                    @mc.Amount gram
                                                                </p>
                                                                <p>
                                                                    @((Convert.ToDouble(mc.Calories) / 100) * Convert.ToDouble(mc.Amount)) kcal
                                                                </p>
                                                            </td>
                                                        </tr>

                                                    }
                                                }
                                            </table>
                                        </td>
                                    }
                                }
                            </tr>
                        }
                    }


                </tbody>
            </table>
        </div>
    }