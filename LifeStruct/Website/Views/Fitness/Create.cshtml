@model LifeStruct.Models.Fitness.FitnessModel
@{
    ViewBag.Title = "Create workout schedule";
}

@section Signout{
    @Html.Partial("~/Views/Shared/_logout.cshtml")
}
<div class="content bg-green-0" ng-app="LifeStruct">
    <div class="fitness fitness-create" ng-controller="fitnessCreateCtrl">
        @using (Html.BeginForm("Create", "Fitness", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            <ul class="create-info left">
                <li>
                    @Html.TextBoxFor(x => x.Title, new { @class = "ipt", placeholder = "Title" })
                </li>
                <li>
                    @Html.TextAreaFor(x => x.Description, new { @class = "tinymce", @placeholder = "Description"})
                </li>
                <li>
                    <tags-input ng-model="tags" placeholder="Tags to find your diet"></tags-input>
                    <input type="hidden" name="Tags" value="{{tags}}" />                    
                </li>
            </ul>
            <ul class="create-picture right">
                <li>
                    <div class="picture">
                        <label class="btn ib" for="upload-file">Upload image</label>
                        <input ng-model="Img" type="file" accept="image/.png,.jpg,.gif" class="hide" id="upload-file" name="uploadFile" />
                        <img src="" id="modelImg" />
                    </div>
                    @Html.ValidationMessage("Filesize")
                </li>
                <li>
                    <input class="btn fit-gre" type="submit" value="Next" />
                </li>
            </ul>
        }
    </div>
</div>
<script src="~/Content/JS/layout/fileupload.js"></script>
<script src="~/Content/JS/layout/fitness.js"></script>
<script>
    upload('#upload-file', '#modelImg');
    fitness.create();
</script>