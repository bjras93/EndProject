@model LifeStruct.Models.Video.VideoModel
@{
    ViewBag.Title = "Video";
}
@section Signout{
    @Html.Partial("~/Views/Shared/_logout.cshtml")
}
@Html.ActionLink("Return", "Index", "Videos", null, new { @class = "return" })
<div class="content video-con">
    <div class="videos">
        <div class="video" ng-app="LifeStruct" ng-controller="videoCreateCtrl">
            <h3>Add a video</h3>
            @using (Html.BeginForm("Create", "Videos", FormMethod.Post))
            {
                @Html.ValidationSummary(true)
                <table>
                    <tr>
                        <td>
                            <select class="ipt" name="Type">
                                <option value="0">Select video type</option>
                                <option value="1">Fitness</option>
                                <option value="2">Health</option>
                            </select><br />
                            @Html.ValidationMessageFor(x => x.Type)
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <input type="text" class="ipt" name="Title" placeholder="Title" /><br />
                            @Html.ValidationMessageFor(x => x.Title)
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <input type="text" class="ipt" name="YouTubeId" placeholder="YouTube ID ex.: bHQqvYy5KYo" /><br />
                            @Html.ValidationMessageFor(x => x.YouTubeId)
                            <img src="~/Content/img/web/youtubeid.png" />
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <textarea type="text" class="ipt max-400" name="Description" placeholder="Description"></textarea>
                            <div id="txt-length-left">400 characters left</div>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <tags-input ng-model="tags" placeholder="Tags to find the video"></tags-input>
                            <input type="hidden" value="{{tags}}" name="Tags" />
                        </td>
                    </tr>
                    <tr>
                        <td><input type="submit" class="btn" value="Submit" /></td>
                    </tr>
                </table>
            }
        </div>
    </div>
</div>
<script src="~/Content/JS/layout/videos.js"></script>
<script>
    videos.create();
</script>