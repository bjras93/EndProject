@{
    ViewBag.Title = "Create workout schedule";
}

<div class="content">
    <div class="fitness fitness-create">
        @using (Html.BeginForm("Create", "Fitness", FormMethod.Post))
        {
            <ul>
                <li>
                    <input type="text" class="ipt" name="f_title" placeholder="Title" />
                </li>
                <li>
                    <textarea class="tinymce" name="f_description" placeholder="Description"></textarea>
                </li>
                <li>
                    <label class="btn ib" for="upl">Upload image</label>
                    <input onchange="fileupload.upl(this, event);" accept="image/.png,.jpg,.gif" type="file" class="hide" id="upl" />
                    <div id="pic"></div>
                </li>
                <li>
                    <input class="btn fit-gre" type="submit" value="Next" />
                </li>
            </ul>
        }
    </div>
</div>
<script src="~/Content/JS/layout/fileupload.js"></script>
