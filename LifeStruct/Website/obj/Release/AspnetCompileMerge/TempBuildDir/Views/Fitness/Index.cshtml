@using LifeStruct.Models;
@model IEnumerable<FitnessModel>
@{
    var user = UserViewModel.GetCurrentUser();
    ViewBag.Title = "Fitness";
}
@section Signout{
    @Html.Partial("~/Views/Shared/_logout.cshtml")
}
@Html.ActionLink("Return", "Index", "Home", null, new { @class = "return" })
<div class="content g2">
    <div class="fitness fitness-index">
        @{
            if (Model != null)
            {
                foreach (var f in Model)
                {
                    <div class="overview">
                        <div>

                            <h3>@Html.ActionLink(f.Title, string.Format("Details/{0}", f.Id))</h3>
                            @Html.Raw(f.Description)
                        </div>
                        <div class="user-section">
                            @if (user.Id == f.UserId)
                    {
                                <a href="../Fitness/@string.Format("Edit/{0}", f.Id)"><span href="" class="icon-pencil"></span></a>
                                <p>Author: You</p>
                            }
                            else
                            {
                                <p>Author: @UserViewModel.GetUser(f.UserId).Name</p>
                            }
                        </div>
                    </div>
                }
            }
        }
    </div>
</div>
@Html.ActionLink("+", "Create", null, new { @class = "add add-fitness" })