<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - LifeStruct</title>
    <link rel="icon"
          type="image/png"
          href="~/Content/img/web/favicon.ico">

    @Scripts.Render("~/bundles/plugins")
    <script src="~/Content/JS/plugins/tinymce.min.js"></script>
    <script>
        tinymce.init({ selector: '.tinymce', menu: 'none', toolbar: 'bold italic underline | bullist numlist | outdent indent', font_formats: 'Roboto' });
    </script>
    <link href="~/Content/CSS/main.css" rel="stylesheet" />
    <link href="~/Content/CSS/ng-tags-input.min.css" rel="stylesheet" />
</head>
<body>
    <div class="overlay">
        <div class="main-nav-container">
            <div class="main-nav">
                @RenderSection("Signout", false)
                <div class="logo">
                    @Html.ActionLink("LifeStruct", "Index", "Home", new { area = "" }, new { @class = "" })
                </div>
            </div>
        </div>
        <div class="side-nav">
            @if (Request.Url?.AbsolutePath != "/")
            {
                @Html.Partial("~/Views/Shared/_SideNav.cshtml")
            }
        </div>
        <div class="container">
            @RenderBody()
        </div>
    </div>
    <script src="~/Content/JS/layout/menu.js"></script>
    <script src="~/Content/JS/main.js"></script>
    <script src="~/Content/JS/layout/modal.js"></script>
</body>
</html>
