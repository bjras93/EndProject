@{
    ViewBag.Title = "Statistics";
}
@section Signout{
    @Html.Partial("~/Views/Shared/_logout.cshtml")
}
@Html.ActionLink("Return", "Index", "Home", null, new { @class = "return" })
<div class="statistics bg-green-0">
    <div class="stats">
        <h3>Your mood every day you've logged on to LifeStruct</h3>
        <canvas id="mood"></canvas>
    </div>

    <div class="stats">
        <h3>Your weight since you started using LifeStruct</h3>
        <p>This can be updated under profile</p>
        <canvas id="weight"></canvas>
    </div>
</div>
<script src="~/Content/JS/plugins/chartjs/Chart.bundle.min.js"></script>
<script src="~/Content/JS/plugins/chartjs/Chart.min.js"></script>
<script src="~/Content/JS/layout/statistics.js"></script>
<script>
    statistics.init();
</script>