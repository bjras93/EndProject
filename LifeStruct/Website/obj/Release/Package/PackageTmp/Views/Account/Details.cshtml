@{
    ViewBag.Title = "Profile";
    var user = LifeStruct.Models.UserViewModel.GetCurrentUser();
}
@Html.ActionLink("Return", "Index", "Home", null, new { @class = "return" })
<div class="content g2">
    <div class="account-menu">
        <ul>
            <li>
                <a data-section="account-details" id="acount-d" href="">
                    Account Details
                </a>
            </li>
            <li>
                <a data-section="account-goals" href="">
                    Goal
                </a>
            </li>
        </ul>
    </div>
    <div class="account-details hide">
        <ul>
            <li>
                <span>
                    Name
                </span>
                <span>
                    @user.Name
                </span>
                <span>
                    <a href="">
                        Edit
                    </a>
                </span>
            </li>
            <li>
                <span>
                    E-mail
                </span>
                <span>
                    @user.Email
                </span>
                <span>
                    <a href="">
                        Edit
                    </a>
                </span>
            </li>
            <li>
                <span>
                    Weight
                </span>
                <span>
                    @user.Weight kg
                </span>
                <span>
                    <a href="">
                        Edit
                    </a>
                </span>
            </li>
            <li>
                <span>
                    Height
                </span>
                <span>
                    @user.Height cm
                </span>
                <span>
                    <a href="">
                        Edit
                    </a>
                </span>
            </li>
        </ul>       
    </div>
    <div class="account-goals hide">
        <ul>
            <li></li>
        </ul>
    </div>
    <div class="clear"></div>
</div>
