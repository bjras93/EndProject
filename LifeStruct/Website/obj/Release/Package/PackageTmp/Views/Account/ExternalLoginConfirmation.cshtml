@model LifeStruct.Models.ExternalLoginConfirmationViewModel
@{
    ViewBag.Title = "Register";
}

@using (Html.BeginForm("ExternalLoginConfirmation", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    <div class="register g1">
        @Html.AntiForgeryToken()
        <h3>Hello @Model.Name.Split(' ')[0], is this information correct?</h3>
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.TextBoxFor(m => m.Name, new { @class = "ipt", @placeholder = "Full name" })
            @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })
        </div>
        <div class="form-group">
            @Html.TextBoxFor(m => m.Height, new { @class = "ipt", @type = "number", @placeholder = "Height", @min = "30", @max = "400" })
            @Html.ValidationMessageFor(m => m.Height, "", new { @class = "text-danger" })
        </div>
        <div class="form-group">
            @Html.TextBoxFor(m => m.Weight, new { @class = "ipt", @type = "number", @placeholder = "Weight", @min = 30, @max = 300 })
            @Html.ValidationMessageFor(m => m.Weight, "", new { @class = "text-danger", @type = "number" })
        </div>
        <div class="form-group">
            @Html.TextBoxFor(m => m.Email, new { @class = "ipt", @placeholder = "E-mail" })
            @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
        </div>
        <div class="form-group">
            <div>Birthday</div>
            @Html.TextBoxFor(m => m.Birthday, "{0:dd-mm-yyyy}", new { @class = "ipt", @placeholder = "Birthday", @type = "date", @min = (Convert.ToInt32(DateTime.Now.Year)-100) + "-12-31", @max = (Convert.ToInt32(DateTime.Now.Year)-18) + "-12-31" })<br />
            @Html.ValidationMessageFor(m => m.Birthday, "", new { @class = "text-danger" })
        </div>
        <div class="form-group">
            <select name="Gender">
                <option value="0">Select a gender</option>
                <option value="1">Female</option>
                <option value="2">Male</option>
            </select><br />
            @Html.ValidationMessageFor(m => m.Gender, "", new { @class = "text-danger" })
        </div>
        <div class="form-group">
            <input type="submit" class="btn btn-default" value="Register" />
        </div>
    </div>
}

