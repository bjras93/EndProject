@model LifeStruct.Models.VideoModel
@{
    ViewBag.Title = "Video";
}
@section Signout{
    @Html.Partial("~/Views/Shared/_logout.cshtml")
}
@Html.ActionLink("Return", "Index", "Videos", null, new { @class = "return" })
<div class="content video-con">
    <div class="videos">
        <div class="video" ng-app="LifeStruct" ng-controller="videoEditCtrl">
            <h3>Add a video</h3>
            @using (Html.BeginForm("Edit", "Videos", FormMethod.Post))
            {
                @Html.ValidationSummary(true)
                <table>
                    <tr>
                        <td>
                            <input type="hidden" name="Id" value="@Model.Id" />
                            <input type="hidden" name="UserId" value="@Model.UserId" />
                            <select class="ipt" name="Type">

                                <option value="0">Select video type</option>
                                <option @if (Model.Type == 1) { <text> selected</text> } value="1">Fitness</option>
                                <option @if (Model.Type == 2) { <text> selected</text> } value="2">Health</option>
                            </select><br />
                            @Html.ValidationMessageFor(x => x.Type)
                        </td>
                    </tr>
                    <tr>
                        <td>
                            @Html.TextBoxFor(x => x.Title, new { @class = "ipt", @placeholder = "Title" })<br />
                            @Html.ValidationMessageFor(x => x.Title)
                        </td>
                    </tr>
                    <tr>
                        <td>
                            @Html.TextBoxFor(x => x.YouTubeId, new { @class = "ipt", @placeholder = "YouTube ID ex.: bHQqvYy5KYo" })<br />
                            @Html.ValidationMessageFor(x => x.YouTubeId)
                        </td>
                    </tr>
                    <tr>
                        <td>
                            @Html.TextAreaFor(x => x.Description, new { @class = "ipt max-400", @placeholder = "Description" })
                            <div id="txt-length-left">400 characters left</div>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <tags-input ng-model="tags" ng-init="tags = @Model.Tags" placeholder="Tags to find the video"></tags-input>
                            <input type="hidden" value="{{tags}}" name="Tags" />
                        </td>
                    </tr>
                    <tr>
                        <td><input type="submit" class="btn" value="Submit" /></td>
                    </tr>
                </table>
            }
        </div>
    </div>
</div>
<script src="~/Content/JS/layout/videos.js"></script>
<script>
    videos.edit();
</script>