@model YouGo.Models.DietModel

@{
    ViewBag.Title = "Create your own diet";
    var user = YouGo.Models.UserViewModel.GetCurrentUser();
}


<div ng-app="yougo">

    <input type="hidden" name="Id" value="@Model.Id" />
    <div class="create-diet" ng-controller="dietPostCtrl">
        <div class="diet">
            <form name="myForm">
                <input type="hidden" id="UserId" name="UserId" value="@user.Id.Replace("-", "")" />
                <div class="">
                    <input name="Title" ng-model="Title" class="ipt" type="text" placeholder="Title" />
                    <div ng-if="!myForm.Title.$valid && isClicked">
                        <div>This field is required</div>
                    </div>
                </div>
                <div class="">
                    <textarea name="Description" placeholder="Description" required class="ipt" ng-model="Description"></textarea>
                    <div ng-if="!myForm.Description.$valid && isClicked">
                        <div>This field is required</div>
                    </div>
                </div>
                <div class="">
                    <label class="btn ib" for="upl">Upload image</label>
                    <input ng-model="Img" type="file" class="hide" id="upl" />
                </div>
                <div>
                    <a ng-click="newDiet();" href="" class="btn ib blogin">Next</a>
                </div>

            </form>
        </div>

    </div>
@using (Html.BeginForm("Create", "Diets", FormMethod.Post))
{
    <div class="create-diet" ng-controller="dietGetCtrl">
        
            <div class="period hide">

                <h3>{{Data.Title}}</h3><br />

                <div ng-repeat="w in week" class="plan">

                    <div ng-init="weekInit=$index"></div>
                    <a ng-click="weekClick(w.no);" href="" class="weeks">Uge {{w.no}}</a>
                    <div ng-class="wC.indexOf(w.no) > -1 ? '' : 'hide'" ng-repeat="day in w.days">
                        <a ng-click="dayClick(day.day + ',' + w.no);" class="days" href="">{{day.day}}</a>
                        <div ng-class="dC.indexOf(day.day + ',' + w.no) > -1 ? '' : 'hide'" class="pnl">
                            <div ng-repeat="meal in day.meals">
                                <h4>{{meal.name}}</h4>
                                <div>
                                    <!-- Edible first repeater-->
                                    <div ng-init="mealInit=$index"></div>
                                    <div ng-init="Ids = 'w' + (weekInit +1) + '_m' + (mealInit +1) + '_d' + day.id"></div>
                                    <div>
                                        <input ng-model-options="{ debounce: 200}" type="text" ng-model="searches.searchEdibles[Ids + '_e' + 1]" ng-keypress="hideResult(Ids + '_e' + 1, false); setId(Ids + '_e' + 1);" name="name_{{Ids + '_e' + 1}}" placeholder="Edible" class="ipt" />                                    
                                       
                                        <div ng-hide="searches.searchEdibles[Ids + '_e' + 1] == null" ng-repeat="food in allFood">
                                            <a ng-click="setCalories(food.Gram, Ids + '_e' + 1); clearFood(); setFoodId(food.Id, mealInit, weekInit, day.id); searches.searchEdibles[Ids + '_e' + 1] = food.Name;hideResult(Ids + '_e' + 1, true);" ng-hide="searches.foodSearch[Ids + '_e' + 1]"  href="">{{food.Name}}</a>
                                           
                                        </div>
                                    </div>
                                    <div>
                                        <input type="hidden"  name="foodId_{{foodId}}" />
                                        <input type="text" ng-model="measureEdible" placeholder="Amount" name="amount_{{Ids + '_e' + 1}}" class="ipt" />
                                        <div ng-if="measureEdible != null" ng-model="am.amountS[Ids + '_e' + 1]">
                                            
                                            {{am.amountS[Ids + '_e' + 1] * measureEdible}} kcal
                                        </div>
                                    </div>
                                    <!-- Edible second repeater-->
                                    <div class="edible" ng-repeat="edible in day.meals[mealInit].edibles">
                                        <div ng-init="edibleInit=$index +2"></div>
                                        <div>
                                            <input  ng-model-options="{ debounce: 200}" type="text" ng-model="searches.searchEdibles[Ids + '_e' + edibleInit]" ng-keypress="hideResult(Ids + '_e' + edibleInit, false);setId(Ids + '_e' + edibleInit);" name="name_{{Ids + '_e' + edibleInit}}" placeholder="Edible" class="ipt" />
                                        </div>
                                        <div ng-hide="searches.searchEdibles[Ids + '_e' + edibleInit] == null" ng-repeat="food in allFood">
                                            <a ng-click="setCalories(food.Gram, Ids + '_e' + edibleInit); clearFood(); setFoodId(food.Id, mealInit, weekInit, day.id); searches.searchEdibles[Ids + '_e' + edibleInit] = food.Name; hideResult(Ids + '_e' + edibleInit, true)" ng-hide="searches.foodSearch[Ids + '_e' + edibleInit]" href="">{{food.Name}}</a>
                                        </div>
                                        <div>

                                            <input type="text" placeholder="Amount" ng-model="measurement" class="ipt" name="amount_{{Ids}}" />
                                            <div ng-if="measurement != null" ng-model="am.amountS[Ids + '_e' + edibleInit]">
                                                {{am.amountS[Ids + '_e' + edibleInit] * measurement}} kcal
                                            </div>
                                        </div>
                                    </div>

                                    <div>
                                        <a ng-click="addEdible(day, w.no, meal.no);" class="btn ib" href="">Add more edibles</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <br />

                <a ng-click="addWeek();" class="btn ib" href="">Add another week</a>


                <input class="" type="submit" value="Finish">
                <a class="btn ib" data-url="@Url.Action("AddNewFood")" id="open-modal" href="">Open modal</a>
                <div class="modal-overlay">
                    <div id="modal">

                    </div>
                </div>
            </div>
    </div>
}
</div>

<script src="~/Content/JS/plugins/angular.min.js"></script>
<script src="~/Content/JS/layout/diet.js"></script>
