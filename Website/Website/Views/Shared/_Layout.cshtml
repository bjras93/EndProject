<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - YouGo</title>

    <link href="~/Content/CSS/main.css" rel="stylesheet" />
    @Scripts.Render("~/bundles/plugins")
</head>
<body>
    <div class="overlay">
        <div class="container">
            <div class="logo">
                @Html.ActionLink("Plumeria", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav"></ul>
            </div>
        </div>
        <div class="container">
            @RenderBody()
        </div>
    </div>
    <script src="~/Content/JS/layout/menu.js"></script>
    <script src="~/Content/JS/main.js"></script>
    <script src="~/Content/JS/layout/modal.js"></script>
</body>
</html>
